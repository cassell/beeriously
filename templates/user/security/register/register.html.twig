{% extends "user/security/layout.html.twig" %}

{% block fos_user_content %}
    <div id="beeriously-security-container">
        <div class="clearfix">
            <div id="beeriously-security-logo">
                <img src="/assets/img/logo/beeriously-logo-square.png">
            </div>
        </div>

        <div class="clearfix">
            <a href="{{ path('fos_user_security_login') }}">&lt; {{ 'beeriously.security.back_to_login'|trans }}</a>
        </div>

        <h1>{{ 'beeriously.security.register.new_user'|trans }}</h1>
        {% form_theme form 'user/security/register/register-form-theme.html.twig' %}
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_widget(form) }}
        <div class="form-section-heading"><span>{{ 'beeriously.security.register.section.name'|trans }}</span></div>
        <div class="form-group">
            <div>
                <label for="firstName">{{ 'beeriously.security.register.first_name'|trans }}</label>
            </div>
            <input type="text" class="form-control" id="firstName" name="_firstName" value="" required="required" />
        </div>
        <div class="form-group">
            <div>
                <label for="lastName">{{ 'beeriously.security.register.last_name'|trans }}</label>
            </div>
            <input type="text" class="form-control" id="lastName" name="_lastName" value="" required="required" />
        </div>
        <div class="form-section-heading"><span>{{ 'beeriously.security.register.section.units_of_measure'|trans }}</span></div>
        <div class="form-group">
            <div>
                <label>{{ 'beeriously.measurements.mass_volume.description'|trans }}</label>
            </div>
            {% for id,description in massVolumeUnits %}
                <div class="form-check form-check-override">
                    <input class="form-check-input" type="radio" name="_mass_volume" id="_mass_volume_{{ id }}" value="{{ id }}">
                    <label class="form-check-label form-check-label-override" for="_mass_volume_{{ id }}">
                        {{ description | trans }}
                    </label>
                </div>
            {% endfor %}
        </div>
        <div class="form-group">
            <div>
                <label>{{ 'beeriously.measurements.temperature.description'|trans }}</label>
            </div>
            {% for id,description in temperatureUnits %}
                <div class="form-check form-check-override">
                    <input class="form-check-input" type="radio" name="_temperature" id="_temperature_{{ id }}" value="{{ id }}">
                    <label class="form-check-label form-check-label-override" for="_temperature_{{ id }}">
                        {{ description | trans }}
                    </label>
                </div>
            {% endfor %}
        </div>
        <div class="form-group">
            <div>
                <label>{{ 'beeriously.measurements.density.description'|trans }}</label>
            </div>
            {% for id,description in densityUnits %}
                <div class="form-check form-check-override">
                    <input class="form-check-input" type="radio" name="_density" id="_density_{{ id }}" value="{{ id }}">
                    <label class="form-check-label form-check-label-override" for="_density_{{ id }}">
                        {{ description | trans }}
                    </label>
                </div>
            {% endfor %}
        </div>
        <br>
        <div>
            <input id="beeriously-security-register-submit-button" class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
        {{ form_end(form) }}

    </div>
{% endblock fos_user_content %}
